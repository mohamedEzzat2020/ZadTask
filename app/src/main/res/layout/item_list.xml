<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_list_layout_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_item_list_layout_cardview_margin"
    android:background="@android:color/white"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/card_item_list_layout_cardview_corner_raduis"
    card_view:cardElevation="@dimen/card_item_list_layout_cardview_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/reli_item_list_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/reli_item_list_layout_container_padding"
        android:layout_margin="@dimen/reli_item_list_layout_container_margin"
        >



        <TextView
            android:id="@+id/txt_item_list_layout_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_item_list_layout_repo_name_textsize"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/txt_item_list_layout_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_item_list_layout_owner_name_textsize"
            android:textColor="#de000000"
            android:textStyle="normal"
            android:layout_below="@+id/txt_item_list_layout_repo_name"
            android:layout_marginTop="@dimen/txt_item_list_layout_owner_name_margintop"
            android:gravity="left"
            />



        <TextView
            android:id="@+id/txt_item_list_layout_repo_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_item_list_layout_repo_desc_textsize"
            android:textColor="#8a000000"
            android:textStyle="italic"
            android:layout_below="@+id/txt_item_list_layout_owner_name"
            android:layout_marginTop="@dimen/txt_item_list_layout_repo_desc_margintop"
            android:gravity="left"
            />


    </RelativeLayout>



</android.support.v7.widget.CardView>